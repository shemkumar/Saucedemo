{
  "name": "saucedemo-qa-automation",
  "version": "1.0.0",
  "description": "Automated testing suite for SauceDemo web application using Playwright",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:sorting": "playwright test sorting.spec.ts",
    "test:checkout": "playwright test checkout.spec.ts",
    "test:visual": "playwright test --project=visual",
    "test:accessibility": "playwright test --project=accessibility",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "show-report": "playwright show-report reports/html-report",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.ts\""
  },
  "keywords": [
    "playwright",
    "testing",
    "automation",
    "e2e",
    "qa"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@axe-core/playwright": "^4.7.0",
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.8.4",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-playwright": "^0.16.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  }
}
